@model Agriculture.Models.ViewModels.LoginViewModel
@{
    Layout = null;

    Agriculture.Models.ViewModels.CustomerViewModel loggedInUser = ViewBag.Customer;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div>
        <p>Logged in successful!</p>
        <p>First Name: @loggedInUser.FirstName</p>
        <p>Last Name: @loggedInUser.LastName</p>
        @Html.ActionLink("Categories", "Categories", "Home")
    </div>
</body>
</html>