@model Agriculture.Models.ViewModels.CustomersViewModel
@using Agriculture.Models.ViewModels
@{
    Layout = null;
    Agriculture.Models.ViewModels.CustomerViewModel loggedInUser = ViewBag.Customer;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customers</title>
</head>
<body>
    <div>
        <div>
            @if (loggedInUser != null)
            {
                <p>First Name: @loggedInUser.FirstName</p>
                <p>Last Name: @loggedInUser.LastName</p>
                <p>PasswordHash: @loggedInUser.PasswordHash</p>
                <p>Salt: @loggedInUser.Salt</p>
            }
            else
            {
                <p>
                    Hello @loggedInUser.FirstName @loggedInUser.LastName
                </p>
            }
        </div>
        @foreach (CustomerViewModel customerViewModel in Model.CustomerViewModels)
        {
            <p>
                @customerViewModel.FirstName @customerViewModel.LastName @customerViewModel.Email @customerViewModel.PasswordHash:@customerViewModel.Salt
            </p>
        }
        @Html.ActionLink("Categories", "Categories", "Home")
    </div>
</body>
</html>
    
