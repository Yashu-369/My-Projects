@model Agriculture.Models.Entities.Crop
@using Agriculture.Models.ViewModels
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Crop</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Season name:</label>
                @Html.DropDownList("Seasons", ViewBag.Seasons as SelectList, "Select Season")
            </div>

            <div class="form-group">
                <label>Crop name:</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Pesticides Used:</label>
                @Html.TextBoxFor(x => x.PesticidesUsed, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Image:</label>
                @Html.TextBoxFor(x => x.CropImage, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Price:</label>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
            </div>

            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Add Crop" />
            </div>
        }
    </div>
</body>
</html>
